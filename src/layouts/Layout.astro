        <nav class="max-w-screen-lg mx-auto px-4 py-4" role="navigation" aria-label="Main navigation">
            <div class="flex items-center justify-between">
                <a href="/" class="text-xl font-semibold text-primary-300 hover:text-primary-200 transition-colors">
                    tizzy.dev
                </a>
                <div class="flex items-center gap-6">
                    <a href="/" class="text-text-200 hover:text-primary-300 transition-colors">Home</a>
